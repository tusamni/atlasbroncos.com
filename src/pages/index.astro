<BaseLayout bgColor="bg-stone-100" marginTop={false} marginBottom={true}>
	<Padding>
		<Section>
			<Container size="medium">
				<div class="grid grid-cols-12 gap-y-8 md:gap-y-0">
					<div class="col-span-12 md:col-span-3 flex justify-between flex-col gap-y-8">
						<p class="text-balance">Each Atlas Bronco is restored with precision and care, combining vintage aesthetics with modern technology for a driving experience unlike any other.</p>
						<div class="text-base inline-flex md:flex md:flex-col lg:inline-flex lg:flex-row gap-x-1">
							<div>Ready to Build?</div>
							<div><a href="/contact" class="font-bold">Get started &gt;</a></div>
						</div>
					</div>

					<h1 class="order-first md:order-last col-span-12 md:col-span-8 md:col-start-5">At Atlas Broncos, we specialize in <span>frame-off, Vintage Bronco restorations.</span></h1>
				</div>
			</Container>

			<Container size="large">
				<div class="md:h-[40vh] md:min-h-[700px] grid grid-cols-12 md:grid-rows-2 gap-4 md:gap-6">
					<Image src="https://cdn.cosmicjs.com/f52e18e0-4c7c-11f0-8d02-d7de9448d6b1-R5C_7715.jpg" pictureClass="col-span-12 lg:col-span-9 lg:row-span-2" class="w-full h-full object-cover lg:object-left" sizes="70vw" />
