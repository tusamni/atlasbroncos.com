---
import "/src/assets/styles/_base.css";
import "bigger-picture/css";
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";

import BaseHead from "@/components/layout/BaseHead";
import ContactForm from "@/components/sections/ContactForm";
import Container from "@/components/layout/Container";
import Button from "@/components/buttons/Button";
import Header from "@/components/layout/Header";
import Footer from "@/components/layout/Footer";
import Image from "@/components/images/Image";
import Map from "@/components/backgrounds/Map";
import Padding from "@/components/layout/Padding";
import Section from "@/components/layout/Section";

// props
export interface Props {
	title?: string;
	description?: string;
	contactForm?: boolean;
	transparentHeader?: boolean;
	marginTop?: boolean;
	marginBottom?: boolean;
	footerPadding?: boolean;
	bgColor: string;
}

const { title, description, contactForm = true, transparentHeader = false, marginTop = true, marginBottom = false, footerPadding = true, bgColor } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class:list={["min-h-screen", bgColor]}>
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5W2NH2T7" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

		<Header headerLight={transparentHeader ? true : false} />

		<main class:list={[marginTop && "pt-16 lg:pt-32", marginBottom && "pt-16 lg:pb-32"]}>
			<slot />
		</main>

		{
			contactForm && (
				<Map opacity={0.05}>
					<Padding paddingBottom="large" paddingTop="large" classes="relative">
						<Container classes="relative">
							<div class="grid grid-cols-5 gap-8">
								<div class="col-span-2">
									<div class="h1 mb-8 text-white">
										Ready to
										<br />
										Get Started?
									</div>

									<div class="font-light leading-relaxed text-xl text-stone-300">
										Ready to bring your vintage Bronco dream to life? Contact us today to discuss your restoration project. Our team is here to guide you through every step of the process, ensuring your Bronco is restored to its
										full potential.
									</div>
								</div>

								<ContactForm />
							</div>
						</Container>
					</Padding>
				</Map>
			)
		}

		<Footer />

		<script>
			// modal
			import BiggerPicture from "bigger-picture";

			let bp = BiggerPicture({
				target: document.body,
			});

			// open (will be a child of the target element above)
			let imageLinks = document.querySelectorAll(`.gallery img`);

			// add click listener to open BiggerPicture
			for (let link of imageLinks) {
				link.addEventListener("click", openGallery);
			}

			// function to open BiggerPicture
			function openGallery(e) {
				e.preventDefault();
				bp.open({
					items: imageLinks,
					el: e.currentTarget,
					scale: 0.8,
				});
			}
		</script>
	</body>
</html>
